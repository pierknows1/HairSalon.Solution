@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h2>Stylists</h2>

@if (Model.Count == 0)
{
  <h5>No stylists have been added yet!</h5>
}

@if (Model.Count > 0)
{
  <ul>
    @foreach (Stylist stylist in Model)
    {
      <li>@Html.ActionLink($"{stylist.StylistName}", "Details", new { id = stylist.StylistId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add a new stylist", "Create", "Stylists")</p>
<p>@Html.ActionLink("Add a new client", "Create", "Clients")</p>
<p>@Html.ActionLink("Back home", "Index", "Home")</p>