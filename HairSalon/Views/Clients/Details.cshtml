@{
    Layout = "_Layout";
}
@model HairSalon.Models.Client


<h2> @Model.ClientName's Details </h2>
<h3>Stylist: @Model.Stylist.StylistName</h3>

<p>@Html.ActionLink($"Edit {Model.ClientName}", "Edit", new { id = Model.ClientId})</p>
<p>@Html.ActionLink($"Delete {Model.ClientName}", "Delete", new { id = Model.ClientId})</p>
<p>@Html.ActionLink($"Return to {Model.Stylist.StylistName}", "Details", "Stylists", 
    new { id = Model.Stylist.StylistId})</p>
<p>@Html.ActionLink("Return to all Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>